<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/blue_content_background"
    android:padding="8dp"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_count_profile"
            android:paddingHorizontal="6dp"
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/task_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial_regular"
                android:includeFontPadding="false"
                tools:text="200"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginEnd="4dp"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/icon_flash"/>

        </LinearLayout>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_regular"
            android:includeFontPadding="false"
            tools:text="До 12.04.2024"
            android:layout_marginTop="16dp"
            android:textColor="@color/color_text_description"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_bold"
            android:includeFontPadding="false"
            tools:text="Поучаствовать во ВКОШП"
            android:textColor="@color/color_text_title"
            android:textSize="15sp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_cup"
        android:layout_gravity="end"/>

</LinearLayout>