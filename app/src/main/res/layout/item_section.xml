<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/blue_content_background"
    android:padding="8dp"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_count_profile"
        android:paddingHorizontal="6dp"
        android:paddingVertical="6dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/task_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_regular"
            android:includeFontPadding="false"
            tools:text="200"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="4dp"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/icon_flash"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_task_1"
            android:layout_gravity="end"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_bold"
            android:includeFontPadding="false"
            tools:text="Поучаствовать во ВКОШП"
            android:layout_marginTop="12dp"
            android:textColor="@color/color_text_title"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_count_profile"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/text_sections_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Факультет"
                android:textSize="10sp"
                android:fontFamily="@font/arial_regular" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>